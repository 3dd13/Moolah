<%= form_for [:user, @goal] do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label :description %>
  <%= f.text_area :description %>

  <%= f.label :final_amount %>
  <%= f.text_field :final_amount %>

  <%= f.label :deadline %>
  <%= f.date_field :deadline %>

  <%= f.submit %>
<% end  %>  
